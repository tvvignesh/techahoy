<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Easy1"
    android:background="@drawable/mich"
     >

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        android:text="@string/q4difficult"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/diff4" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Move to Question 5" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/textView1" >
        
    <RadioButton
        android:id="@+id/rbtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup1"
        android:layout_alignRight="@+id/rbtn1"
        android:layout_marginBottom="22dp"
        android:text="Michelin" />

    <RadioButton
        android:id="@+id/rbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rbnt4"
        android:layout_marginBottom="54dp"
        android:text="Cookie Man" />

    <RadioButton
        android:id="@+id/rbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rbtn1"
        android:layout_alignBottom="@+id/rbtn1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="Napster" />

    <RadioButton
        android:id="@+id/rbtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rbtn2"
        android:layout_below="@+id/rbtn1"
        android:text="Pillsbury" />
    </RadioGroup>

    

</RelativeLayout>