<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Easy1"
android:background="@color/black"     >

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:textColor="@color/red"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/q3difficult"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/diff3" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:textColor="@color/green"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Move to Question 4" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >
    
    <RadioButton
        android:id="@+id/rbtn1"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup1"
        android:layout_alignParentLeft="true"
        android:text="99" />

    <RadioButton
        android:id="@+id/rbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:textColor="@color/white"
        android:text="100" />

    <RadioButton
        android:id="@+id/rbtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rbtn1"
        android:layout_below="@+id/radioGroup1"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:text="45" />

    <RadioButton
        android:id="@+id/rbtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rbtn3"
        android:layout_alignBottom="@+id/rbtn3"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/rbtn2"
        android:text="50" />
    </RadioGroup>

    

</RelativeLayout>