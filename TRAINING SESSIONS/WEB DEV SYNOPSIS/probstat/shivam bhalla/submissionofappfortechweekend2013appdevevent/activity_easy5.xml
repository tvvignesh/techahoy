<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Easy1"
android:background="@color/black"     >

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/q5easy"
        android:textSize="30sp"
        android:textColor="@color/red"
         />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv4"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv5"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/easy51" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="See your result" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" >
        
    <RadioButton
        android:id="@+id/rbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/radioGroup1"
        android:layout_alignLeft="@+id/button1"
        android:text="0" />

    <RadioButton
        android:id="@+id/rbtn3"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rbtn1"
        android:layout_below="@+id/rbtn1"
        android:layout_marginTop="10dp"
        android:text="2" />

    <RadioButton
        android:id="@+id/rbtn4"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rbtn3"
        android:layout_alignBottom="@+id/rbtn3"
        android:layout_toRightOf="@+id/radioGroup1"
        android:text="3" />

    <RadioButton
        android:id="@+id/rbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/radioGroup1"
        android:layout_alignLeft="@+id/rbtn4"
        android:text="1" />    
      
    </RadioGroup>

    

</RelativeLayout>